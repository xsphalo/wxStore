/**index.wxss**/
@import "/dist/tabbar/tabbar.wxss";

.allpage {
  padding-bottom: 98rpx;
}

.searchs image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.placeclass {
  color: #aaa;
  font-size: 26rpx;
}

.searchs input {
  font-size: 26rpx;
  color: #333;
}

.searchs {
  background: #fff;
  height: 60rpx;
  border-radius: 30rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 710rpx;
  margin: 20rpx auto;
}

swiper-item image {
  width: 750rpx;
  height: 280rpx;
}

.prodlist {
  /* height: 320rpx; */
  padding: 16rpx 0;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  background: #fff;
  margin-bottom: 20rpx;
}

.prodname {
  width: 163rpx;
  height: 150rpx;
  text-align: center;
  margin-top: 20rpx;
}

.prodname image {
  width: 100rpx;
  height: 100rpx;
}

.prodname text {
  display: block;
  font-size: 12px;
  color: #333;
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.heads {
  font-size: 30rpx;
  color: #333;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.prolist-item image {
  width: 370rpx;
  height: 370rpx;
}

.prolist-item {
  width: 370rpx;
  background: #fff;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.prolist-item:nth-child(even) {
  margin-right: 0;
}

.prolist-item .botmsg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
  padding-bottom: 22rpx;
}

.prolist-item .botmsg image {
  width: 110rpx;
  height: 38rpx;
  padding: 20rpx;
  box-sizing: border-content;
  padding-right: 0;
}

.prolist-item .botmsg .prices {
  font-size: 36rpx;
  color: #ff0028;
  font-weight: bold;
}

.prolist-item .proname {
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 36rpx;
  height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 10rpx;
}

.prolists {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.morebtn {
  width: 200rpx;
  height: 56rpx;
  background: #f3f3f3;
  font-size: 24rpx;
  color: #666;
  border: 0.5rpx solid #ccc;
  border-radius: 28rpx 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}

.morebtn view {
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  height: 26rpx;
  line-height: 26rpx;
}

.morepro {
  padding: 30rpx 0;
  margin-bottom: 98rpx;
}

.right-top {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.4);
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
  bottom: 148rpx;
  right: 40rpx;
}
/* .................. */

.shade {
  background-color: #000;
  position: fixed;
  z-index: 49;
  width: 100%;
  height: 100%;
  opacity: 0.4;
  margin: 0;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.particulars {
  width: 480rpx;
  border: 0;
  z-index: 50;
  position: fixed;
  background: #fff;
  bottom: 38%;
  left: 18%;
  border-radius: 10px;
  padding-bottom: 60rpx;
}

.sheethead {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  background: #ff9812;
  border-radius: 10rpx 10rpx 0 0;
  padding: 0 30rpx;
}

.sheethead view:first-child {
  width: 44rpx;
  height: 44rpx;
}

.sheethead view {
  font-size: 32rpx;
  color: #fff;
}

.sheethead image {
  width: 44rpx;
  height: 44rpx;
}

.content {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 40rpx 0 60rpx 0;
}

.content view:first-child {
  font-size: 26rpx;
  color: #ff9812;
}

.content view:last-child {
  font-size: 36rpx;
  color: #ff9812;
  font-weight: bold;
}

.bijias {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 20rpx;
}

.bijias view:first-child {
  font-size: 26rpx;
  color: #333;
}

.bijias button {
  font-size: 26rpx;
  color: #ff9812;
  text-align: center;
  height: 46rpx;
  line-height: 46rpx;
  border: 1rpx solid #ff9812;
  border-radius: 23rpx 23rpx;
  background: #fff;
  margin: 0;
  padding: 0;
  width: 160rpx;
}

.bijias button::after {
  border: 0;
}

.borderbot {
  border-bottom: 1rpx solid #e6e6e6;
}