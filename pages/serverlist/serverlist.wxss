/* pages/serverlist/serverlist.wxss */
.allpage{
  padding-bottom: 140rpx;
}
.producmsg {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
}

.products {
  height: 160rpx;
  padding: 0 10rpx;
}

.products image {
  width: 140rpx;
  height: 140rpx;
}

.prodeat {
  width: 480rpx;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 10rpx;
}

.prodeat .procart image {
  width: 56rpx;
  height: 56rpx;
}

.prodea-msg {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.prodea-msg view:first-child {
  font-size: 14px;
  color: #333;
  text-overflow: ellipsis;
  /* display: -webkit-box;  *//* -webkit-line-clamp: 2; *//* -webkit-box-orient: vertical; */
  overflow: hidden;
  white-space: nowrap;
}

.prodea-msg view:last-child {
  font-size: 16px;
  color: #ff4426;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  /* display: -webkit-box;   *//* -webkit-line-clamp: 2; *//* -webkit-box-orient: vertical; */
}

.prodea-msg view:nth-child(2) {
  font-size: 10px;
  color: #999;
}

.produs {
  padding: 0 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
  height: 180rpx;
  margin-top: 10rpx;
}

.counts {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.counts image {
  width: 42rpx;
  height: 42rpx;
  display: block;
}

.counts text {
  width: 45rpx;
  text-align: center;
  font-size: 18px;
  color: #ff9812;
  display: block;
  margin: 0 20rpx;
}
.choices{
  background: #fff;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.titles{
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #333;
}
.bthsa{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 20rpx 0;
}
.bthsa button{
  width: 120rpx;
  height: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  border-radius: 5rpx;
  background: #999;
  padding: 0;
  margin: 0;
  margin-right: 20rpx;
  font-size: 26rpx;
}
.modei{
  font-size: 30rpx;
  color: #333;
  height: 70rpx;
  background: #fff;
  padding-top: 20rpx;
  padding-left: 20rpx;
}
.caad image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.pingjia{
  padding:0 30rpx;
}
.pade{
  padding: 0 30rpx;
}
.pingjia label{
  font-size: 12px;
  color: #333;
}
.textars{
  margin-top: 20rpx;
  background: #fff;
  /* text-align: center; */
}
.textares{
  font-size: 30rpx;
  color: #333;
  background: #f8f8f8;
  margin: 0 auto;
  width: 670rpx;
  padding: 20rpx;
  box-sizing: content-box;
}
.buttons{
  width: 100%;
  position: fixed;
  height: 90rpx;
  bottom: 0;
  left: 0;
}
.buttons button{
  width: 100%;
  height: 100%;
  background: #ff9812;
  line-height: 90rpx;
  color: #fff;
  text-align: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
  font-size: 36rpx;
  font-weight: 500;
}
.bgcolor{
  background: #ff9812 !important;
}

.caad{
  padding: 0 20rpx;
  padding-top: 10rpx;
}