/* pages/orderdetail/orderdetail.wxss */
.allpage{
  padding-bottom: 110rpx;
}
.zhuang{
  padding-left: 20rpx;
  height: 82rpx;
  background: #fff;
}
.header{
  border-bottom: 1rpx solid #e6e6e6;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.header view{
  color: #1aad19;
  font-size: 26rpx;

}
.header view:first-child{
  width: 40rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
}
.header view image{
  width: 20rpx;
  height: 24rpx;
}
.maijia{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  background: #fff;
}
.icons{
  width: 40rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
}
.icons image{
  width: 28rpx;
  height: 30rpx;
}
.usermsg{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.msgss{
  width: 690rpx;
}
.msgss view{
  font-size: 24rpx;
  color: #666;
}

.orderdetails {
  background: #f2f2f2;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.orderdetails .oderimg image {
  width: 190rpx;
  height: 190rpx;
}

.odername {
  width: 310rpx;
}

.odername text:first-child {
  font-size: 13px;
  color: #000;
  overflow: hidden;
  white-space: wrap;
  text-overflow: ellipsis;
}

.odername text:last-child {
  font-size: 12px;
  color: #999;
}

.odername, .orderprice {
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}

.orderprice {
  text-align: right;
}

.orderprice text:first-child {
  font-size: 14px;
  color: #000;
}

.orderprice text:nth-child(2) {
  font-size: 14px;
  color: #999;
  margin: 10rpx 0;
}

.orderprice text:last-child {
  font-size: 12px;
  color: #999;
}

.odername text
.oderprice text {
  display: block;
}
.payarea{
  background: #fff;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 156rpx;
  align-items: center;
}
.payarea view text{
  color: #999;
  font-size: 12px;
  font-weight: 500;
  display: block;
  margin: 7rpx 0;
}
.payarea view text.pays{
  color: #333;
}
.payarea view:last-child{
  text-align: right;
}
.orderpage{
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.orderpage text{
  display: block;
  font-size: 12px;
  color: #999;
  margin: 7rpx 0;
}
.bottmqiu{
  height: 90rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}
.bottmqiu view{
  height: 50rpx;
}
.bottmqiu view button{
  width: 150rpx;
  height: 50rpx;
  background: #fff;
  color: #333;
  font-size: 24rpx;
  line-height: 50rpx;
  padding: 0;
  border: 1rpx solid #e6e6e6;
}
.remarks{
  background: #fff;
  font-size: 24rpx;
  color: #999;
  padding: 30rpx 20rpx;
  line-height: 24rpx;
  margin-top: 20rpx;
}