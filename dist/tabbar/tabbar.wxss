/* dist/tabbar/tabbar.wxss */

.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 98rpx;
  border-top: 1rpx solid #ccc;
  background: #fff;
}

.tabbar_nav {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  height: 100%;
}

.tabbar_icon {
  width: 40rpx;
  height: 40rpx;
}
 .tabbar_nav text{
  font-size: 20rpx;
} 
.tabbar_nav{
  position: relative;
}
.toprights{
  position: absolute;
  top: 0;
  right: 34rpx;
  background: #ff9512;
  color: #fff;
  height: 26rpx;
  border-radius: 13rpx;
  text-align: center;
  line-height: 26rpx;
  transition: all 0.2s ease-in-out;
  padding: 2rpx 8rpx;
}